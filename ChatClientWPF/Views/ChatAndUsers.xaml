<UserControl x:Class="ChatClientWPF.Views.ChatAndUsers"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChatClientWPF.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ListBox x:Name="lbChat" ItemsSource="{Binding Chat}" d:ItemsSource="{d:SampleData ItemCount=5}"  Grid.ColumnSpan="2" />
        <ListBox x:Name="lbUsers" d:ItemsSource="{d:SampleData ItemCount=5}" MaxWidth="300" Grid.Column="3"  />
    </Grid>
</UserControl>
