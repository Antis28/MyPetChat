<Window x:Class="ChatClientWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatClientWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid>
        <TextBox x:Name="tbUserName" Text="User name" HorizontalAlignment="Left" Margin="264,10,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="526" Height="39"/>
        <Button x:Name="btnConDiscon" Content="Connect" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="39" Width="240" Click="btnConDiscon_Click"/>
        <ListBox x:Name="lbChat" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,54,10,90"/>
        <TextBox x:Name="tbMessege" Text="Your message" HorizontalAlignment="Center" Margin="0,349,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="780" Height="28"/>

    </Grid>
</Window>
